<% title 'New address book' -%>

<%= link_to "back", address_books_path %>

<% form_for ( @address_book ) do |f| -%>
  <%= f.label :label %>
  <%= f.text_field :label %>
  <%= error_message_on @address_book, "label" %>
  
  <%= f.label :description %>
  <%= f.text_area :description %>
  
  <%= submit_tag "Create" %>
<% end -%>

