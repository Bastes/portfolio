<% title 'Edit address book' -%>

<%= link_to "back", address_books_path %>
<%= link_to "delete", address_book_path(@address_book), :confirm => "Are you sure ?", :method => :delete %>

<% form_for ( @address_book ) do |f| -%>
  <%= f.label :label %>
  <%= f.text_field :label %>
  <%= error_message_on @address_book, "label" %>
  
  <%= f.label :description %>
  <%= f.text_area :description %>
  
  <%= submit_tag "Update" %>
<% end -%>

