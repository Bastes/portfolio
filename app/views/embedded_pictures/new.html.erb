<ul>
<% @pictures.each do |picture| -%>
  <li id="embeddable_picture_<%= picture.id %>">
    <% remote_form_for EmbeddedPicture.new(:page_id => @page.id, :picture_id => picture.id) do |f| %>
      <%= f.hidden_field :page_id %>
      <%= f.hidden_field :picture_id %>
      <%= link_to_picture picture %>
      <%= f.submit :add.l, :style => 'display: inline; border: none; background-color: transparent; padding: 0px; margin: 0px; float: none; clear: none;' %>
    <% end -%>
<% end -%>
</ul>

