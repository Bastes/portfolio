<% title :new_something.l_with_args(:something => :address.l).capitalize -%>

<%= link_to :back.l, address_books_path %>

<% form_for( @address, :html => { :multipart => true } ) do |f| -%>
  <%= f.hidden_field :address_book_id %>
  
  <%= f.label :url, :url.l.capitalize %>
  <%= f.text_field :url %>
  <%= error_message_on @address, 'url' %>
  
  <%= f.label :title, :title.l.capitalize %>
  <%= f.text_field :title %>
  
  <%= f.label :banner, :banner.l.capitalize %>
  <%= f.file_field :banner %>
  <%=  image_tag @address.banner.url if @address.banner.exists? %>
  
  <%= submit_tag :create.l.capitalize %>
<% end -%>

