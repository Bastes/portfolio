<% label = address.label.blank? ? 'http://' + address.url : address.label -%>
<%= link_to(address.banner.exists? ?
            image_tag(address.banner.url, :title => label ) :
            label, 'http://' + address.url, :title => label ) %>

<% admin_area do %>
<%= link_to :edit.l, edit_address_path(address) %>
<%= link_to :delete.l, address_path(address), :confirm => :are_you_sure?.l, :method => :delete %>
<% end -%>

