<% title 'Edit address' -%>

<%= link_to "back", address_books_path %>
<%= link_to "delete", address_path(@address), :confirm => "Are you sure ?", :method => :delete %>

<% form_for( @address, :html => { :multipart => true } ) do |f| -%>
  <%= f.hidden_field :address_book_id %>
  
  <%= f.label :url %>
  <%= f.text_field :url %>
  <%= error_message_on @address, 'url' %>
  
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :banner %>
  <%= f.file_field :banner %>
  <%=  image_tag @address.banner.url if @address.banner.exists? %>
  
  <%= submit_tag "Update" %>
<% end -%>

