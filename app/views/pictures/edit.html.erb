<% title :edit_something.l_with_args(:something => :picture).capitalize -%>

<%= link_to :back.l, pictures_path %><br />

<%= link_to_picture(@picture) %>

<% form_for(@picture, :html => { :multipart => true }) do |f| %>

  <%= f.label :attachment, :attachment.l.capitalize %>
  <%= f.file_field :attachment %>
  <%= error_message_on @picture, :attachment %>
  
  <%= f.submit :update.l.capitalize %>
<% end %>

