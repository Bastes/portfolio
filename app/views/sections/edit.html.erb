<% title :edit_something.l_with_args(:something => :section.l).capitalize -%>

<%= link_to :show.l, @section %> |
<%= link_to :delete.l, @section, :confirm => :are_you_sure?.l.capitalize, :method => :delete %>

<% form_for(@section) do |f| %>
  <%= f.label :title, :title.l.capitalize %>
  <%= f.text_field :title %>
  <%= f.error_message_on :title %>
  
  <%= f.label :description, :description.l.capitalize %>
  <%= f.text_area :description %>
  
  <%= f.submit :update.l.capitalize %>
<% end %>

