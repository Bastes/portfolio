<% title :new_something.l_with_args(:something => :section.l).capitalize -%>

<%= link_to :back.l, sections_path %>

<% form_for(@section) do |f| %>
  <%= f.label :title, :title.l.capitalize %>
  <%= f.text_field :title %>
  <%= f.error_message_on :title %>
  
  <%= f.label :description, :description.l.capitalize %>
  <%= f.text_area :description %>
  
  <%= f.submit :create.l.capitalize %>
<% end %>

