<% title 'Editing page' -%>

<%= link_to 'show', @page %>
<%= link_to 'delete', @page, :confirm => "Are you sure ?", :method => :delete %>

<fieldset>
  <legend>Page</legend>
  <% form_for(@page) do |f| %>
    <%= f.hidden_field :section_id %>
    <%= f.error_messages %>

    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :subtitle %><br />
      <%= f.text_field :subtitle %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit "Update" %>
    </p>
  <% end %>
</fieldset>

<fieldset>
  <legend>Pictures</legend>

  <%= render 'embedded_pictures/index' %>
  
  <%= link_to "add (new)", new_page_picture_path(@page) %>
  
  <fieldset>
    <legend>
      <%= link_to_remote "add (in stock)",
          :url => new_page_embedded_picture_path(@page),
          :method => :get,
          :update => "embeddable_pictures_box" %>
    </legend>
    <div id="embeddable_pictures_box"></div>
  </fieldset>
</fieldset>

<fieldset>
  <legend>Documents</legend>

  <%= render 'embedded_documents/index' %>
  
  <%= link_to "add (new)", new_page_document_path(@page) %>
  
  <fieldset>
    <legend>
      <%= link_to_remote "add (in stock)",
          :url => new_page_embedded_document_path(@page),
          :method => :get,
          :update => "embeddable_documents_box" %>
    </legend>
    <div id="embeddable_documents_box"></div>
  </fieldset>
</fieldset>

